{
  "name": "@eco/react-image-viewer",
  "version": "0.0.1",
  "description": "基于react的图片预览组件，兼容PC、移动端",
  "branch": "main",
  "main": "lib/index.js",
  "module": "es/index.js",
  "sideEffects": [
    "*.less"
  ],
  "license": "MIT",
  "repository": "git@github.com:Yicoding/react-image-viewer.git",
  "scripts": {
    "start": "dumi dev",
    "build": "father-build",
    "docs": "dumi build",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "commit": "cz"
  },
  "typings": "es/index.d.ts",
  "files": [
    "es",
    "lib"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.3",
    "any-touch": "^2.0.0-alpha.4",
    "classnames": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@types/react-dom": "17",
    "@umijs/fabric": "^2.8.1",
    "@umijs/test": "^3.0.5",
    "cz-conventional-changelog": "^3.3.0",
    "dumi": "^1.1.0",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.1",
    "yorkie": "^2.0.0"
  }
}
